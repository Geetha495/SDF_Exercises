{
        "tasks": [
                {
                        "type": "cppbuild",
                        "label": "C/C++: g++ build active file",
                        "command": "/usr/bin/g++",
                        "args": [
                                 "-g",
                                 "-std=c++2a",  
                                "-o",
                                "${fileDirname}/${fileBasenameNoExtension}",
                                "-L",
                                 "${HOME}/packages/fmt-7.1.3/build",
                                 "-I",
                                 "${HOME}/packages/fmt-7.1.3/include",
                                  "${file}",
                                  "-lfmt",
                                  "-lpthread"
                        ],
                        "options": {
                                "cwd": "${fileDirname}"
                        },
                        "problemMatcher": [
                                "$gcc"
                        ],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        },
                        "detail": "compiler: /usr/bin/g++"
                }
        ]
}